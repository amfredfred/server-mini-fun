{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "lib": [
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [  "./**/*",   ],
    "exclude": [
        "node_modules",
        "./test-main.ts"
    ]
}